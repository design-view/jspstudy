<%
	String id = request.getParameter("id");
	String oldid = request.getParameter("oldid");
	String pw = request.getParameter("pw");
	String username = request.getParameter("username");
	JDBCConnect jdbc = new JDBCConnect();
	String query="update member set id=?, pw=?, name=? where id=?";
	PreparedStatement psmt =  jdbc.con.prepareStatement(query);
	psmt.setString(1, id);
	psmt.setString(2, pw);
	psmt.setString(3, username);
	psmt.setString(4, oldid);
	int result = psmt.executeUpdate();
	if(result==1){
		JSFunction.alertLocation("수정되었습니다.", "memberlist.jsp", out);
	}else {
		JSFunction.alertLocation("수정되지않음", "memberlist.jsp", out);
	}
%>
